{% extends "layout.html.twig" %}

{% block title %}
    Admin - Expositions
{% endblock %}

{% block content %}

    <section class="section exhibition-admin container-fluid">
        <h1 class="title-section text-center my-5">Administration expositions</h1>
        <a href="/admin/index" class="btn btn-primary mb-5">Retour</a>
        {% if _get is defined  %}
            {% for key, value in _get %}
                <div class="alert alert-{{ key }}">{{ value }}</div>
            {% endfor %}
        {% endif %}
        <a href="/Exhibition/add" class="btn btn-primary mb-5 ml-4">Ajouter</a>

        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
            {% for exhibition in exhibitions %}
                <div class="col mb-4">
                    <div class="card p-1 shadow-sm">
                        <img src="/assets/images/exhibition/{{ exhibition.image }}" class="card-img-top"
                             alt="{{ exhibition.subject }}">
                        <div class="card-body position-relative">
                            <h5 class="card-title title-section text-center">{{ exhibition.subject }}</h5>
                            <p class="card-text">{{ exhibition.detail | slice(0, 80) }}...</p>
                        </div>
                        <div class="card-footer text-right">
                            <a href="/Exhibition/delete/{{ exhibition.id }}" class="btn btn-danger btn-sm">Supprimer</a>
                            <a href="/Exhibition/edit/{{ exhibition.id }}" class="btn btn-primary btn-sm">Modifier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
